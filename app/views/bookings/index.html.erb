<h1>My Bookings</h1>
<div class='card-container'>
  <% @bookings.each do |booking| %>
    <div class='card'>
      <p><%=link_to garden_path(booking.garden) do %>
        <%= booking.garden.name %>
      <%end%></p>
      <p> Starts : <%= booking.start_date %> </p>
      <p> End : <%= booking.end_date %> </p>
      <p> Total nights : <%= booking.nb_nights %> </p>
      <p> Total price : <%= booking.total_price %> </p>
      <p><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, booking_path(booking),
        method: :delete,
        data: { confirm: "Are you sure?" }
      %></p>
      <p><%= link_to 'display', booking_path(booking.id) %></p>
    </div>
  <% end %>
</div>


