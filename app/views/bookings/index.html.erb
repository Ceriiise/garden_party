<div class="col-sm-10 offset-sm-1">
  <div class='home-header'>
    <h1>My bookings</h1>
  </div>

  <div class='index-bookings-container'>
      <ul>
        <% @bookings.each do |booking| %>
          <%= link_to booking_path(booking) do%>
            <li>
              <div class='inline-review'>
                <div class='booking-container-index'>
                  <div class='column-user-infos'>
                    <span class="card-avatar"> <%=cl_image_tag booking.garden.user.photo, height: 50, crop: :fill, radius: 50%> </span>
                    <span style="margin-left: 10px"> <%=booking.garden.user.first_name%> </span>
                  </div>
                  <div class='column-booking-date'>
                    <p>from : <%= booking.start_date %></p>
                    <p>to : <%= booking.end_date %></p>
                  </div>
                  <div id="people-number" class="column-number-people-max">
                      <i class="fas fa-users bookings-garden-name"></i>  x <%= booking.nbguests %>
                  </div>
                  <div class='column-price'>
                    <%= booking.garden.price * booking.nb_nights %>â‚¬
                  </div>
                </div>
                <div class='cancel-booking'>
                  <%= link_to booking_path(booking),
                    method: :delete,
                    data: { confirm: "Are you sure?" } do%>
                    <p class="btn btn-danger">Cancel</p>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
  </div>
</div>




