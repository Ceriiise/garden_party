<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="show-profile-form">
        <div class='title-setup'>
          <h1>My Profile</h1>
        </div>

        <% if @profile.photo == nil %>
          <div class="avatar-profile"
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
             url('http://kitt.lewagon.com/placeholder/users/ssaunier')">
          </div>
        <% else %>
          <div class="avatar-profile"
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
               url('<%= image_path @profile.photo, height: 300, width: 400, crop: :fill %>')">
          </div>

        <% end %>

        <%= simple_form_for(@profile, url: profile_path, method: :patch) do |f| %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit :submit %>
        <% end %>

        <div>
          <%= simple_form_for(@profile, url: profile_path, method: :patch) do |f| %>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :description %>
            <%= f.button :submit, class: 'btn btn-primary'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
