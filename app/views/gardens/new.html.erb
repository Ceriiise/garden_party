<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Create a new garden</h1>

      <%= simple_form_for @garden do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :max_guests, collection: 0..20 %>
        <%= f.input :swimming_pool, as: :boolean %>
        <%= f.input :barbecue, as: :boolean %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
